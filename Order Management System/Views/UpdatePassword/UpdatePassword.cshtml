@model BusinessLayer.Models.Login
@{
    ViewBag.Title = "UpdatePassword";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Update Password</title>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Favicon-->
    <link rel="icon" href="../../favicon.ico" type="image/x-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- Bootstrap Core Css -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- Waves Effect Css -->
    <link href="~/Content/waves.css" rel="stylesheet" />
    <!-- Animation Css -->
    <link href="~/Content/animate.css" rel="stylesheet" />
    <!-- Custom Css -->
    <link href="~/Content/style.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <script src="~/scripts/jquery-3.4.1.min.js"></script>
    <script src="~/JqueryFiles/GenericAjax.js"></script>
    <script src="~/JqueryFiles/UpdatePassword.js"></script>
</head>

<body class="login-page">
    <div class="login-box">
        <div class="logo">
            <a href="javascript:void(0);"><b>EBM</b></a>
            <img src="~/Content/logo.png" height="100" style="margin-left:170px" />
            <small>ORDER MANAGEMENT SYSTEM</small>
        </div>
        <div class="card">
            <div class="body">
                <form>

                    <div class="msg">Update Your Password</div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">lock</i>
                        </span>
                        <div class="form-line">
                            <input type="password" class="form-control" name="txtOldPass" id="txtOldPass" placeholder="Old Password" required autofocus autocomplete="off">
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">lock</i>
                        </span>
                        <div class="form-line">
                            <input type="password" class="form-control" id="txtNewPass" name="txtNewPass" placeholder="New Password" required>
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">lock</i>
                        </span>
                        <div class="form-line">
                            <input type="password" class="form-control" id="txtreNewPass" name="ReNewPass" placeholder="Retype New Password" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <input type="button" class="btn btn-primary m-t-15 waves-effect" value="Change Password" id="bttnUpdatePass" />

                        </div>
                    </div>
                </form>

            </div>

        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <p id="paswrdmatch" class="alert alert-danger collapse" role="alert">Passwords do not match</p>

            <div id="warningAlert" class="alert alert-danger collapse" role="alert">

            </div>
            <div id="successAlert" class="alert alert-success collapse" role="alert">
                ...
            </div>
        </div>
    </div>
    <!-- Jquery Core Js
    <script src="~/scripts/jquery.min.js"></script>
    <!-- Bootstrap Core Js -->
    <script src="~/scripts/bootstrap.js"></script>
    <!-- Waves Effect Plugin Js -->
    <script src="~/scripts/waves.js"></script>
    <!-- Validation Plugin Js
    <script src="../../plugins/jquery-validation/jquery.validate.js"></script>
    <!-- Custom Js -->
    <script src="~/scripts/admin.js"></script>

</body>
</html>


