
@{
    ViewBag.Title = "Special_Order";
    Layout = "~/Views/Shared/_LayoutNavBar.cshtml";
}

<script src="~/scripts/jquery-3.4.1.min.js"></script>
<link href="//cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
<script src="~/JqueryFiles/GenericAjax.js"></script>
<script src="~/JqueryFiles/Special_Order_Approval.js"></script>
<div id="divLoader" style="display: none;width: 100%;height: 100%;position: absolute;z-index: 100000;opacity: 0.5;background-color: black;">
    <img src="~/assets/images/4V0b.gif" alt="Loader" height="100px" width="100px" style="align-self: center;height: 100px;width: 100px;margin-left: 46%;margin-top: 15%;" />
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="tab-content">
                <div id="monday" class="tab-pane fade in active">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="card">
                            <div class="header">
                                <h2><strong><u>Special Order Approval</u></strong></h2>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-lg-offset-1 col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                    <select class="form-control show-tick ms select2" id="drpCustomer" data-placeholder="Select">
                                        <option id="drpCustomer">Select Customer</option>
                                    </select>
                                </div>

                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">

                                    <select class="form-control show-tick ms select2" id="drpRefrenceCode" data-placeholder="Select">
                                        <option id="drpRefrenceCode">Select a Reference Number</option>

                                    </select>
                                </div>
                            </div>
                            <div class="body">
                                <div class="table-responsive social_media_table">
                                    <table class="table table-hover" id="AllApprovalRecords">
                                        <thead>
                                            <tr>
                                                <th>Material ID</th>
                                                <th>Material Description</th>
                                                <th></th>
                                                <th>Quantity</th>
                                                <th>Quantity</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </tfoot>

                                    </table>
                                </div>

                                <input type="text" id="txtAproved" name="Aproved" value="" hidden />
                                <input type="button" class="btn btn-primary m-t-15 waves-effect" id="bttnADDApproval" value="Approve" />
                                <input type="button" class="btn btn-primary m-t-15 waves-effect" id="bttnReject" value="Reject" />
                                <input type="button" class="btn btn-primary m-t-15 waves-effect" id="redirect" value="Dashboard" />
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div id="OperationDone" class="alert alert-success collapse" role="alert">
                                Operation Done
                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div id="AlreadyApproved" class="alert alert-danger collapse" role="alert">
                                Already Approved
                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div id="RejectDone" class="alert alert-danger collapse" role="alert">
                                Order already Rejected
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div id="OperationUnsuccedful" class="alert alert-danger collapse" role="alert">
                                Operation unsuccessful
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

