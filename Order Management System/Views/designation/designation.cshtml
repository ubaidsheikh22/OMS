<section class="content">

    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                <div class="card">
                    <div class="header">
                        <h2>
                            <U>Approval Role</U>
                        </h2>

                    </div>
                    <div class="body">
                        <form id="form">
                            <label>Approval Role Name</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" id="txtdesignationDesc" class="form-control" placeholder="Enter Role Description">
                                </div>
                            </div>

                            @*<label>SELECT USER</label>
                                <div class="form-group">
                                    <select class="btn-group bootstrap-select form-control show-tick" name="userId" id="dropDownUser" data-placeholder="Select User">
                                        <option id="dropDownUser"></option>

                                    </select>
                                </div>*@

                            <label>Position</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" id="txtPosition" name="Position" class="form-control" placeholder="Enter Position">
                                </div>
                            </div>
                            <br>
                            <input type="button" class="btn btn-primary m-t-15 waves-effect" id="bttnAddDesignation" value="Create Designation" />
                            <input type="button" class="btn btn-primary m-t-15 waves-effect" id="redirect" value="Dashboard" />
                        </form>
                    </div>
                </div>
                <label id="checkEmpty"></label>
                <div>
                    <div id="successAlert" class="alert alert-success collapse" role="alert">
                        Details Added successfully.
                    </div>
                    <div id="warningAlert" class="alert alert-danger collapse" role="alert">
                        Details already exists.
                    </div>
                </div>
            </div>
            @*Form Ends*@
            @*DataTable Starts*@
            <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
                <div class="card">
                    <div class="header">
                        <h2>
                            <u>Approval Details</u>
                        </h2>
                    </div>
                    <div class="body">
                        <div class="table-responsive social_media_table">
                            <table id="designationList" class="table table-bordered table-striped table-hover js-basic-example dataTable">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Role ID</th>
                                        <th>Role Desc</th>
                                        <th>User ID</th>
                                        <th>Action</th>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        @*DataTable Ends*@
        <div class="modal fade" id="addevent" tabindex="-1" role="dialog">
            <div class="modal-dialog" id="addevent1" role="document">
                <div class="modal-content">
                    <div class="card bg-dark">
                        <div class="modal-header">
                            <h4 class="title" id="defaultModalLabel"><strong>Edit</strong></h4>
                        </div>
                    </div>
                    <form>
                        <div class="modal-body">
                            <p> <b>Designation Description</b> </p>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" name="DesignationDesc" class="form-control" id="txtDesignationDescUpdate" placeholder="">
                                    <input type="hidden" name="Designation_ID" class="form-control" id="txtDesignationIDupdate" placeholder="">
                                </div>

                                <div
                                 <label id="updatecheckempty"></label>
                                <div id="successAlertup" class="alert alert-success collapse" role="alert">
                                    Details Updated successfully.
                                </div>
                                <div id="warningAlertup" class="alert alert-danger collapse" role="alert">
                                    Details already exists.
                                </div>
                            </div>
                            </div>
                            <div class="modal-footer">

                                <input type="button" class="btn btn-primary m-t-6 waves-effect" id="bttnDesignationUpdate" value="Update" />
                                <input type="button" class="btn btn-simple btn-round waves-effect" value="Cancel" data-dismiss="modal">
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

</section>
