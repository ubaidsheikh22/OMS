
@{
    ViewBag.Title = "AddManualClaim";
    Layout = "~/Views/Shared/_LayoutNavBar.cshtml";
}


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<link href="//cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
<script src="~/JqueryFiles/GenericAjax.js"></script>
<script src="~/JqueryFiles/ClaimPortalManual.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

<style>
    span.caret {
        margin-left: 329px;
    }

    .open > .dropdown-menu {
        display: contents;
    }
</style>
<div id="divLoader" style="display: none;width: 100%;height: 100%;position: absolute;z-index: 100000;opacity: 0.5;background-color: black;">
    <img src="~/assets/images/4V0b.gif" alt="Loader" height="100px" width="100px" style="align-self: center;height: 100px;width: 100px;margin-left: 46%;margin-top: 15%;" />
</div>


<section class="content">
    <div class="container-fluid">

        @*Form Starts*@
        <div class="row clearfix">
            <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                <div class="card">
                    <div class="header">
                        <h2>
                            <u>Create Manual Claim</u>
                        </h2>

                    </div>
                    <div class="body">
                        <form>
                            <label>Material</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" id="txtReleDesc" name="Rele_Desc" class="form-control" placeholder="Enter Material Code">
                                </div>
                            </div>
                            @*<label>Recieved Day</label>
                            <div class="form-group">
                                <select class="form-control show-tick" id="drpOrderRefrence" name="OrderRefrence" data-placeholder="Select Order Refrence Num">
                                    <option value="-1">Select Day</option>
                                     <option value="Monday">Monday</option>
                                    <option value="Tuesday">Tuesday</option>
                                    <option value="Wednesday">Wednesday</option>
                                    <option value="Thursday">Thursday</option>
                                    <option value="Friday">Friday</option>
                                    <option value="Saturday">Saturday</option>
                                    <option value="Sunday">Sunday</option>
                                </select>
                            </div>*@
                            <label>Quanity</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" id="txtReleDesc" name="Rele_Desc" class="form-control" placeholder="Enter Total Quanity">
                                </div>
                            </div>
                           
                            @*<label>Recieved Quanity</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" id="txtReleDesc" name="Rele_Desc" class="form-control" placeholder="Recieved Quanity">
                                </div>
                            </div>*@
                            <label>Select invoice</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="file" id="FileUpload1" multiple />
                                </div>
                            </div>
                            <label>Enter Your Comment</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <textarea class="form-control"></textarea>
                                </div>
                            </div>
                            <br>
                            <input type="button" class="btn btn-primary m-t-15 waves-effect" id="bttnRole" value="ADD" />
                        </form>
                    </div>

                </div>
                <div>
                    <div id="successAlert" class="alert alert-success collapse" role="alert">
                        Details added successfully.
                    </div>
                    <div id="warningAlert" class="alert alert-secondary collapse" role="alert">
                        Details already exists.
                    </div>
                </div>
            </div>


            @*Form Ends*@

            @*DataTable Starts*@


            <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
                <div class="card">
                    <div class="header">
                        <h2>
                            <u>Claims</u>
                        </h2>

                    </div>
                    <div class="body">
                        <div class="table-responsive social_media_table">
                            <table id="RoleList" class="table table-bordered table-striped table-hover js-basic-example dataTable">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Material</th>
                                        <th>Day</th>
                                        <th>Total Quantity</th>
                                        <th>Recieved Quantity</th>
                                        <th>Your Invoice</th>
                                        <th>Comment</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/scripts/navigationBarScroll.js"></script>


